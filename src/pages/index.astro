		{
			allPostsByDate.length > 0 && (
				<Section title='Recent Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row text-lg'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}
	</div>
</PageLayout>

